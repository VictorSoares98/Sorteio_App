{
  "name": "sorteio_umadrimc",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "vue-tsc -b && vite build --mode production",
    "build:development": "vue-tsc -b && vite build --mode development",
    "build:test": "vue-tsc -b && vite build --mode test",
    "preview": "vite preview",
    "test": "vitest run --mode test",
    "test:watch": "vitest --mode test",
    "test:unit": "vitest run --mode test \"**/*.test.ts\"",
    "test:integration": "vitest run --mode test \"**/*.spec.ts\"",
    "test:visual": "vitest run --mode test \"**/*.visual.ts\"",
    "test:e2e": "vitest run --mode test \"**/*.e2e.ts\" --browser",
    "test:coverage": "vitest run --mode test --coverage",
    "test:ci": "vitest run --mode test --coverage --reporter=json --reporter=junit --outputFile=./test-results.json",
    "test:update": "vitest run --mode test --update",
    "test:component": "vitest run --mode test \"src/components/**/*.test.ts\"",
    "test:store": "vitest run --mode test \"src/stores/**/*.test.ts\"",
    "test:service": "vitest run --mode test \"src/services/**/*.test.ts\"",
    "test:debug": "vitest --mode test --no-watch --reporter=verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:visual",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@sentry/tracing": "^7.120.3",
    "@sentry/vue": "^9.17.0",
    "@simonwep/pickr": "^1.9.1",
    "@types/luxon": "^3.6.2",
    "@vee-validate/zod": "^4.15.0",
    "@vuepic/vue-datepicker": "^11.0.2",
    "@vueuse/core": "^13.0.0",
    "animejs": "^4.0.1",
    "chart.js": "^3.9.1",
    "cloudinary": "^2.6.1",
    "emailjs-com": "^3.2.0",
    "firebase": "^11.7.1",
    "luxon": "^3.6.1",
    "pinia": "^3.0.2",
    "tinycolor2": "^1.6.0",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^4.1.2",
    "vue-router": "^4.5.0",
    "vue3-date-time-picker": "^2.8.3",
    "xlsx": "^0.18.5",
    "zod": "^3.24.4",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/vue3": "^8.6.12",
    "@storybook/vue3-vite": "^8.6.12",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.11",
    "@types/tinycolor2": "^1.4.6",
    "@types/zxcvbn": "^4.4.5",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^26.0.0",
    "playwright": "^1.52.0",
    "postcss": "^8.4.31",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.3.5",
